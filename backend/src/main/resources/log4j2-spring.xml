<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{dd-MM-yyyy HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </Console>
        <Socket name="Splunk Logger" host="127.0.0.1" port="50123">
            <PatternLayout pattern="%d{dd-MM-yyyy HH:mm:ss.SSS} [%t]&#9;%X{username}&#9;%X{IpAddress}&#9;%X{JSESSIONID}&#9;%X{ContentLength}&#9;%X{HttpStatus}&#9;%msg%n" />
        </Socket>
    </Appenders>

    <Loggers>
        <Root level="trace">
            <AppenderRef ref="console" />
        </Root>
        <Logger name="Splunk Logger" level="INFO">
            <AppenderRef ref="Splunk Logger"/>
        </Logger>
    </Loggers>
</Configuration>