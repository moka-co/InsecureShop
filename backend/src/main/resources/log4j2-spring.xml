<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{dd-MM-yyyy HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </Console>
        <File name="File" fileName="src\main\resources\logs\insecuresite.log">
            <PatternLayout pattern="%d{dd-MM-yyyy HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
        <File name="File2" fileName="src\main\resources\logs\fileTwo.log">
            <PatternLayout pattern="%d{dd-MM-yyyy HH:mm:ss}&#9;%msg%n"/>
        </File>
        <File name="Splunk-log" fileName="src\main\resources\logs\splunk.log">
            <PatternLayout pattern="%d{dd-MM-yyyy HH:mm:ss}&#9;%msg%n"/>
        </File>
        <Socket name="Splunk-socket" host="127.0.0.1" port="50123">
            <PatternLayout pattern="%p: %d{dd-MM-yyyy HH:mm:ss}&#9;%msg%n"/>
        </Socket>
    </Appenders>

    <Loggers>
        <Root level="trace">
            <AppenderRef ref="console" />
            <AppenderRef ref="File"/>
        </Root>
        <Logger name="File2" level="debug" >
            <AppenderRef ref="File2"/>
        </Logger>
        <Logger name="Splunk" level="debug">
            <AppenderRef ref="Splunk-log"/>
        </Logger>
        <Logger name="Splunk-socket" level="INFO">
            <AppenderRef ref="Splunk-socket"/>
        </Logger>
    </Loggers>
</Configuration>